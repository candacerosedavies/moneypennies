---
import SectionLayout from "../layouts/SectionLayout.astro";

interface Props {
  h1Text: string; // Required content
  subtitle: string; // Required content
}

const { h1Text = "Connect with over 4,000 event buyers", subtitle = "" } =
  Astro.props;
---

<SectionLayout
  variant="image"
  textSyle="normal"
  imageFolder="connect"
  imageName="pexels-didsss-2127522.jpg"
  className="Section01"
>
  <!--   contentPosition="right"
     contentPosition="left"
verticalAlignment="center" -->
  <div class="normal-text">
    <h1>{h1Text}</h1>
    <!-- <h1 class="masked-text-outline">{maskedText}</h1> -->
  </div>
  <span class="para-container">
    <p class="para-style">
      We provide the latest data to grow your venue's revenue today
    </p>
  </span>
  <!-- <div class="text-content">
    <h2 class="title">{subtitle}</h2>
  </div> -->
</SectionLayout>

<style>
  .content-wrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
    margin: 0 auto;
  }

  .masked-container {
    position: relative;
    margin-bottom: 2rem;
  }

  .masked-text {
    font-size: 6rem;
    font-weight: 500;
    opacity: 50;
    background-clip: text;
    -webkit-background-clip: text;
    background-color: white;
    mix-blend-mode: overlay;
    line-height: 1;
    position: absolute;
    top: 13rem;
    left: 63rem;
    bottom: 30rem;
    right: 2rem;
    width: 60rem;
  }

  .masked-text-outline {
    position: absolute;
    opacity: 50;
    inset: 0;
    font-size: 8rem;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.1);
    pointer-events: none;
    line-height: 1;
  }

  .para-container {
    width: 5rem;
  }

  .para-style {
    font-size: 3rem;
    font-weight: 400;
    font-family: "Roboto", sans-serif;
    color: white;
    position: absolute;
    top: 15rem;
    left: 75rem;
    bottom: 30rem;
    right: 15rem;
    width: 30rem;
    opacity: 50;
    background-clip: text;
    -webkit-background-clip: text;
    background-color: white;
    mix-blend-mode: overlay;
  }

  .normal-text {
    font-size: 8rem;
    font-weight: 100;
    font-family: "Roboto", sans-serif;
    color: white;
    line-height: 1;
    position: absolute;
    top: 30rem;
    left: 5rem;
    bottom: 5rem;
    right: 30rem;
    width: 75rem;
  }

  .text-content {
    z-index: 1;
  }

  .title {
    font-size: 3rem;
    font-weight: 300;
    color: white;
    margin-bottom: 1rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .content-wrapper {
      padding: 2rem;
    }

    .title {
      font-size: 2rem;
    }
  }
</style>
