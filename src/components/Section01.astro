---
import SectionLayout from "../layouts/SectionLayout.astro";
import ScrollArrow from "../components/ScrollArrow.astro";

interface Props {
  h1Text?: string;
  subtitle?: string;
  para?: string;
}

const {
  h1Text = "Connect with over 4,000 event buyers",
  subtitle = "",
  para = "We provide the latest data to grow your venue's revenue today",
} = Astro.props;
---

<SectionLayout
  variant="image"
  imageFolder="connect"
  imageName="pexels-didsss-2127522.jpg"
  className="Section01"
>
  <section>
    <h1 class="h1-wrapper h1-container masked">
      {h1Text}
    </h1>

    <p class="para-wrapper para-container">
      {para}
    </p>
  </section>

  <slot />
</SectionLayout>
<ScrollArrow />

<style>
  section {
    display: flex;
    font-weight: 200;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 2rem 1rem;
  }

  .h1-wrapper {
    /* margin-bottom: 2rem; */
    position: absolute;
    opacity: 0.7;
    color: white;
    top: 55vh;
    left: 5vw;
    width: 70vw;
    font-size: clamp(3rem, 7vw, 7.5rem);
  }

  .para-wrapper {
    position: absolute;
    top: 28vh;
    right: 5vw;
    width: 40vw;
    margin-top: 2rem;
    opacity: 5;
    font-size: clamp(1.5rem, 3vw, 2rem);
    /* masked styling */
    background-clip: text;
    -webkit-background-clip: text;
    background-color: white;
    mix-blend-mode: overlay;
  }

  /* Tablet and smaller breakpoint */
  @media (max-width: 1024px) {
    .h1-wrapper {
      position: absolute;
      top: 30vh;
      right: 5vh;
      width: 90%;
      font-size: clamp(3rem, 13vw, 6rem);
      color: white;
      opacity: unset;
    }

    .para-wrapper {
      right: 5%;
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .h1.wrapper {
    }
    .para-wrapper {
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 480px) {
    .h1-wrapper {
      font-weight: 100;
      margin: 1rem auto;
      font-size: clamp(2.5rem, 13vw, 6rem);
      color: white;
      opacity: unset;
    }
  }

  @media (max-width: 1024px) {
    .para-wrapper {
      position: absolute;
      color: #f7f1d1;
      top: 70vh;
      width: 50%;
      margin: 1rem auto;
      font-size: clamp(1rem, 6vw, 2.5rem);
      background-clip: unset;
      -webkit-background-clip: unset;
      background-color: transparent;
      mix-blend-mode: normal;
    }
  }
</style>
