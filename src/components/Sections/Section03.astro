---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../../components/ScrollArrow.astro";

interface Props {
    h1Text?: string;
    subtitle?: string;
    para?: string;
    h2Text?: string;
    para2?: string;
    para3?: string;
}

const {
    h2Text = "Make data-driven decisions",
    para2 = `Forward plan with real-time bookings data curated to your business needs 
  
  Find insights at a glance with a personalised analysis report 
  
  Feel the impact our data can have on your revenue risk free
  `,
} = Astro.props;
---

<SectionLayout
    variant="color"
    background=""
    className="Section03"
    heightVariant="normal"
>
    <section class="section-3">
        <h2 class="h2-wrapper">
            {h2Text}
        </h2>

        <p class="para2-wrapper text-center" style="white-space: pre-line;">
            {para2}
        </p>
        <a href="/Contact/">
            <button
                class="button px-3 py-3 text-black hover:text-black border font-light rounded-full border-black bg-transparent hover:bg-[#435875] hover:border-[#435875] hover:bg-opacity-50 transition-all duration-300 text-3xl"
                >Request Free Sample
            </button>
        </a>
    </section>
</SectionLayout>
<ScrollArrow />
<slot />

<style lang="scss">
    .button {
        display: flex;
        margin-bottom: 5%;
        align-self: center;
    }

    .section-3 {
        background-color: #dbc4a4;
        display: flex;
        flex-direction: column;
        gap: 5vh;
        // min-height: 100vh;
        font-weight: 200;
        max-width: 100%;
        padding-left: 2%;
        padding-right: 2%;
        padding-top: 15%;
        padding-bottom: 5%;
    }

    .h2-wrapper {
        font-size: clamp(2rem, 15vw, 8rem);
        align-self: flex-start;
        font-weight: 400;
        color: black;
        text-align: right;
    }

    .para2-wrapper {
        // padding: 2vh;
        // align-self: center;
        text-align: left;
        font-size: clamp(1rem, 4vh, 8rem);
        white-space: pre-line;
        color: black;
    }
</style>
