---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../../components/ScrollArrow.astro";

interface Props {
    h1Text?: string;
    subtitle?: string;
    para?: string;
    h2Text?: string;
    para2?: string;
    para3?: string;
}

const {
    h1Text = "Make data driven decisions",
    para2 = `Real-time bookings data curated to your business needs 
  
  Insights at a glance with a personalised analysis report 
  
  Feel the impact our data can have on your revenue risk free
  `,
} = Astro.props;
---

<SectionLayout
    variant="color"
    background=""
    className="Section03"
    heightVariant="tall"
>
    <section class="section-3">
        <h1 class="heading">
            {h1Text}
        </h1>
        <div class="parallax-container">
            <div class="overlay"></div>

            <p class="para2-wrapper text-center" style="white-space: pre-line;">
                {para2}
            </p>
            <a href="/contact/">
                <div class="button-container">
                    <button
                        class="button px-3 py-3 text-black hover:text-black border font-light rounded-full border-black bg-transparent hover:bg-[#435875] hover:border-[#435875] hover:bg-opacity-50 transition-all duration-30"
                        >start connecting
                    </button>
                </div>
            </a>
        </div>
    </section>
</SectionLayout>
<ScrollArrow />

<style lang="scss">
    .parallax-container {
        min-height: 150vh;
        background-attachment: fixed;
        background-image: url("/images/connect/pexels-didsss-2127522.jpg");
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        gap: 5vh;
        // align-items: center;
        // justify-content: center;
        position: relative;
        padding: 6rem 2rem;
        flex: 1;
        width: 100%;
        margin: 0;
        box-sizing: border-box; /* Important: makes padding included in width calculation */

        @include for-size(desktop, up) {
            gap: 2vh;
        }
    }

    .overlay {
        position: absolute;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.4);
        // backdrop-filter: brightness(0.8); //softens background image ( don't need it here)
    }

    .section-3 {
        background-color: #344257;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    // .section03 {
    //     box-sizing: border-box;
    // }

    .button {
        position: relative; //ensures text is above the overlay
        z-index: 10;
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        color: white;
        border-color: white;
        padding: 1rem 1rem;
    }

    .button-container {
        display: flex;
        justify-content: center;
        padding-top: 20vh;
    }

    .heading {
        align-self: flex-start;
        color: #ceb898;
        padding: 4rem 2rem;
    }

    .para2-wrapper {
        position: relative; //ensures text is above the overlay
        z-index: 10;
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        color: white;

        @include for-size(desktop, up) {
            min-width: 20rem;
        }
    }
</style>
