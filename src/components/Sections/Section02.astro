---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ParallaxImages from "../Sections/ParallaxImages.astro";
import ParallaxText from "../Sections/ParallaxText.astro";

interface Props {
    h1Text?: string;
    subtitle?: string;
}

const { h1Text = "Discover", subtitle = "Who. What. Where. When." } =
    Astro.props;

const parallaxImage01 = {
    src: "/images/conference/pexels-jibarofoto-2833037.jpg",
    left: "90%", // Added left property
    top: "20%",
    width: 500,
    speed: 0.3,
    initialOffset: 0,
};

const parallaxImage02 = {
    src: "/images/unlock/pexels-shutter-speed-ism-4767348.jpg",
    left: "60%", // Added left property
    top: "60%",
    width: 250,
    speed: 0.7,
    initialOffset: 0,
};
const images = [parallaxImage01, parallaxImage02];
console.log("Section02 - Images array:", images);
console.log("Section02 - Image 1:", parallaxImage01);
console.log("Section02 - Image 2:", parallaxImage02);
---

<SectionLayout
    variant="color"
    background="bg-[#607ea8]"
    className="section-02"
    contentPosition="right"
    verticalAlignment="bottom"
    heightVariant="tall"
>
    <section class="content-wrapper">
        <ParallaxImages images={images} />
        <ParallaxText h1Text={h1Text} subtitle={subtitle} />
    </section>
</SectionLayout>

