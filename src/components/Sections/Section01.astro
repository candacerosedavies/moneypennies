---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../ScrollArrow.astro";

interface Props {
    h1Text?: string;
    h2Text?: string;
    para?: string;
}

const {
    h1Text = "The future of events booking",
    para = "Know what your clients need before the first conversation",
    h2Text = "moneypennies",
} = Astro.props;
---

<SectionLayout variant="color" className="Section01" allowOverflow={true}>
    <section class="section01" id="section-01">
        <ScrollArrow />
        <section
            class="section01__parallax-container"
            role="banner"
            aria-label="Hero section with celebration background"
        >
            <!-- Text container to bounce all text together -->
            <header class="section01__header">
                <h2 class="section01__h2-heading md__font uppercase">
                    {h2Text}
                </h2>
                <h1 class="section01__h1-heading uppercase lg__font">
                    {h1Text}
                </h1>
                <p class="sm__font section01__para" set:html={para} />

                <nav class="section01__button__container">
                    <!-- use JS 'onclick' instead of an <a> tag. Shouldn't use <a> AND <button> together -->
                    <button
                        class="button--animated"
                        onclick="window.location.href='/contact/'"
                    >
                        <span class="button__text">start now</span>
                    </button>
                </nav>
            </header>
        </section>

        <!----- keyboard accessibility ----->
        <a href="#section-02" class="sr-only-focusable">
            Skip to next section
        </a>
    </section>
</SectionLayout>

<style lang="scss">
    // ----- base styles for mobile -----
    .section01 {
        // background-color: #dbc4a4;

        // min-height: 100vh;
        // text-align: center;

        // width: 100vw;
        // font-weight: 200;
        // overflow: hidden;
    }

    .section01__parallax-container {
        min-height: 100vh;
        background-image: url("/images/celebrate/pexels-cottonbro-3171837.jpg");
        background-size: cover;
        background-position: right 70% bottom 0%;
        background-attachment: fixed; // Default for mobile stops the parallax
        display: flex;

        // flex-grow: 1;
        flex-direction: column;
        position: relative;
        padding: 0rem 1rem;

        //background overlay
        &::before {
            content: "";
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.4);
            pointer-events: none;
        }

        @include for-size(tablet, up) {
            min-height: 150vh;
            background-attachment: fixed; //'fixed' enables the parallax scroll
            // padding: 0rem 2rem;
        }
    }

    // Container for all text elements to bounce together
    .section01__header {
        position: relative;
        z-index: 10;
        display: flex; // Keep as flex
        flex-direction: column;
        align-items: center;
        justify-content: center;

        will-change: transform;
        transition: transform 0.1s ease-out;
        flex-grow: 1;
        margin-bottom: 0;
        max-width: 100vw;
        gap: 2rem;

        @include for-size(tablet, up) {
            margin-bottom: 20rem;
            padding-top: 3rem;
            gap: 2rem; // Larger gap for desktop
        }
    }

    .section01__h2-heading {
        font-weight: 900;
        color: white;
        font-size: clamp(0.5rem, 2.6vw, 1.5rem);
        overflow-wrap: break-word;
        word-break: break-word;
        position: static; // Change from absolute
        padding: 0;
        margin: 0;

        order: 1;

        @include for-size(tablet, up) {
            font-size: clamp(1.5rem, 4vw, 1.5rem);
        }
    }

    .section01__h1-heading {
        display: block;
        margin: 0;
        color: white;
        font-weight: 900;

        // Remove absolute positioning and padding
        position: static; // Change from absolute
        padding: 0; // Remove padding

        order: 2;

        @include for-size(tablet, up) {
            max-width: 95%;
        }
    }

    .section01__para {
        width: 80vw;
        position: static; // Change from absolute so gap works
        padding: 0; // Remove padding
        margin: 0;

        order: 3;

        @include for-size(tablet, up) {
            width: 80%;
        }
    }

    .section01__button__container {
        position: static; // Change from absolute so gap works
        padding: 0;
        margin: 0;

        order: 4;
    }

    //----- keyboard accessibility -----
    .sr-only-focusable {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;

        &:focus {
            position: static;
            width: auto;
            height: auto;
            padding: 0.5rem;
            margin: 0;
            overflow: visible;
            clip: auto;
            white-space: normal;
            background: white;
            color: black;
            border: 2px solid black;
        }
    }
</style>
