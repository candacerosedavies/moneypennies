---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../ScrollArrow.astro";

interface Props {
    h1Text?: string;
    h2Text?: string;
    para?: string;
}

const {
    h1Text = "The future of events booking",
    para = "Know what your clients need before the first conversation",
    h2Text = "MoneyPennies",
} = Astro.props;
---

<SectionLayout variant="color" className="Section01" allowOverflow={true}>
    <section class="section01" id="section-01">
        <ScrollArrow />
        <section
            class="section01__parallax-container"
            role="banner"
            aria-label="Hero section with celebration background"
        >
            <!-- Text container to bounce all text together -->
            <header class="section01__header">
                <!-- <h2 class="section01__h2-heading md__font">
                    {h2Text}
                </h2> -->
                <section class="wrapper__banner--text">
                    <h1
                        class="section01__h1-heading uppercase lg__font text-overlay"
                        data-outline={h1Text}
                    >
                        {h1Text}
                    </h1>
                </section>
                <p class="sm__font section01__para" set:html={para} />

                <nav class="section01__button__container">
                    <!-- use JS 'onclick' instead of an <a> tag. Shouldn't use <a> AND <button> together -->
                    <button
                        class="button--animated"
                        onclick="window.location.href='/contact/'"
                    >
                        <span class="button__text">start now</span>
                    </button>
                </nav>
            </header>
        </section>

        <!----- keyboard accessibility ----->
        <a href="#section-02" class="sr-only-focusable">
            Skip to next section
        </a>
    </section>
</SectionLayout>

<style lang="scss">
    // ----- base styles for mobile -----
    .section01 {
        background-color: #0a1112;
    }

    .section01__parallax-container {
        min-height: 100vh;
        background-image: url("/images/emotive/pexels-rahulp9800-3052307.jpg");
        background-size: cover;
        background-position: right 50% bottom 0%;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        position: relative;
        padding: 0rem 1rem;

        //background overlay
        &::before {
            content: "";
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            pointer-events: none;
        }

        @include for-size(tablet, up) {
            min-height: 150vh;
            background-attachment: fixed;
        }
    }

    // Container for all text elements
    .section01__header {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        will-change: transform;
        transition: transform 0.1s ease-out;
        flex-grow: 1;
        margin-bottom: 0;
        max-width: 100vw;
        gap: 2rem;

        @include for-size(tablet, up) {
            margin-bottom: 20rem;
            padding-top: 3rem;
            gap: 2rem;
        }
    }

    // .section01__h2-heading {
    //     font-family: "zilla slab", sans-serif !important;
    //     font-weight: 200;
    //     font-style: italic;
    //     overflow-wrap: break-word;
    //     word-break: break-word;
    //     position: static;
    //     padding: 0;
    //     margin: 0;
    //     // order: 1;

    //     @include for-size(tablet, up) {
    //     }
    // }

    //Hero text
    .section01__h1-heading {
        display: block;
        margin: 0;
        font-weight: 900;
        position: static;
        padding: 0;
        // order: 2;

        @include for-size(tablet, up) {
            max-width: 95%;
        }

        // Text overlay effect - using data-outline method
        &.text-overlay {
            color: transparent;
            background-image: var(--bg-image);
            background-position: var(--bg-position);
            background-size: var(--bg-size);
            background-attachment: fixed;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-stroke: 1px white;
        }
    }

    .section01__para {
        width: 80vw;
        position: static;
        padding: 0;
        margin: 0;
        // order: 3;

        @include for-size(tablet, up) {
            width: 80%;
        }
    }

    .section01__button__container {
        position: static;
        padding: 0;
        margin: 0;
        order: 4;
    }

    //----- keyboard accessibility -----
    .sr-only-focusable {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;

        &:focus {
            position: static;
            width: auto;
            height: auto;
            padding: 0.5rem;
            margin: 0;
            overflow: visible;
            clip: auto;
            white-space: normal;
            background: white;
            color: black;
            border: 2px solid black;
        }
    }
</style>
