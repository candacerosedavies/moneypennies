---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../../components/ScrollArrow.astro";

interface Props {
    h1Text?: string;
    para?: string;
}

const {
    h1Text = "Say hello to the future of events booking",
    para = `And goodbye to guess work`,
} = Astro.props;
---

<SectionLayout variant="color" className="Section01">
    <section class="section-1">
        <div class="parallax-container">
            <div class="overlay"></div>
            <header>
                <h1 class="heading">{h1Text}</h1>
            </header>

            <p class="para" style="white-space: pre-line;">{para}</p>
        </div>
    </section>
</SectionLayout>

