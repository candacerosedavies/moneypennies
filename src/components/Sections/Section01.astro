---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../ScrollArrow.astro";

interface Props {
    h1Text?: string;
    h2Text?: string;
    para?: string;
}

const {
    h1Text = "The future of events booking",
    para = "Know what your clients need before the first conversation",
    h2Text = "MoneyPennies",
} = Astro.props;
---

<SectionLayout
    variant="color"
    className="Section01"
    allowOverflow={true}
    textWidth="standard"
>
    <section class="section01" id="section-01">
        <ScrollArrow />
        <section
            class="section01__parallax-container"
            role="banner"
            aria-label="Hero section with celebration background"
        >
            <!-- Text container to bounce all text together -->
            <header class="section01--container__text">
                <!-- <h2 class="section01__h2-heading md__font">
                    {h2Text}
                </h2> -->
                <section class="wrapper__banner--text">
                    <h1
                        class="section01__h1-heading uppercase lg__font text-overlay"
                        data-outline={h1Text}
                    >
                        {h1Text}
                    </h1>
                </section>
                <p class="sm__font section01__para" set:html={para} />

                <nav class="section01__button__container leading-none">
                    <!-- use JS 'onclick' instead of an <a> tag. Shouldn't use <a> AND <button> together -->
                    <button
                        class="button--animated"
                        onclick="window.location.href='/contact/'"
                    >
                        <a class="button__text">start now</a>
                    </button>
                </nav>
            </header>
        </section>

        <!----- keyboard accessibility ----->
        <a href="#section-02" class="sr-only-focusable">
            Skip to next section
        </a>
    </section>
</SectionLayout>

<style lang="scss">
    // ----- base styles for mobile -----
    // .section01 {
    //     background-color: #0a1112;
    // }

    .section01__parallax-container {
        min-height: 100vh;
        background-image: url("/images/emotive/pexels-rahulp9800-3052307.jpg");
        background-size: cover;
        background-position: right 60% bottom 0%;
        transform: scale(120%);
        background-attachment: scroll;
        display: flex;
        flex-grow: 1;
        flex-direction: column;
        position: relative;

        //background overlay
        &::before {
            content: "";
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.6);
            pointer-events: none;
        }

        @include for-size(tablet, up) {
            background-attachment: scroll;
            background-position: right 60% bottom 50%;
        }
    }

    // Container for all text elements
    .section01--container__text {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        will-change: transform;
        transition: transform 0.1s ease-out;
        flex-grow: 1;
        margin-bottom: 0;
        max-width: 100vw;
        // gap: 1rem;
        padding: 6rem 2rem 2rem 2rem;

        @media (min-width: 678px) {
            // margin-bottom: 20rem;
            // padding-top: 3rem;
            // padding: 0rem 10rem 0rem 10rem;
        }
    }

    .wrapper__banner--text {
        margin-bottom: 12rem;

        // @include for-size(phone, up) {
        //     margin-bottom: 4rem;
        // }

        @media (min-width: 678px) {
            margin-bottom: 15rem;
        }

        @include for-size(tablet, up) {
        }
    }

    //Hero text
    .section01__h1-heading {
        display: block;
        font-weight: 900;
        position: static;
        padding: 0;
        // order: 2;

        // Text overlay effect - using HTML data-outline
        &.text-overlay {
            color: transparent;
            background-image: var(--bg-image);
            background-position: var(--bg-position);
            background-size: var(--bg-size);
            background-attachment: fixed;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-stroke: 1px white;
        }

        @include for-size(680px, up) {
            font-size: clamp(
                2rem,
                4vw,
                2.5rem
            ); // Force smaller size in problem range
            line-height: 1.1; // Tighter line spacing
        }
    }

    .section01__para {
        width: 80vw;
        position: static;
        // padding-top: 2rem;
        padding-bottom: 0;
        margin-bottom: 2rem;
        // order: 3;
    }

    .section01__button__container {
        // position: absolute;
        margin: 0;
        // order: 4;
    }

    .button--nav:hover .button--nav__text {
        color: var(--button-hover-text-color, black);
    }

    //----- keyboard accessibility -----
    .sr-only-focusable {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;

        &:focus {
            position: static;
            width: auto;
            height: auto;
            padding: 0.5rem;
            margin: 0;
            overflow: visible;
            clip: auto;
            white-space: normal;
            background: white;
            color: black;
            border: 2px solid black;
        }
    }

    // .section01__h2-heading {
