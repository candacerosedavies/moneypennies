---
import SectionLayout from "../../layouts/SectionLayout.astro";
import ScrollArrow from "../../components/ScrollArrow.astro";

interface Props {
  h1Text?: string;
  subtitle?: string;
  para?: string;
  h2Text?: string;
  para2?: string;
  para3?: string;
}

const {
  h1Text = `Connect with the right clients,
at the right time.`,
  subtitle = "Know Whoâ€™s Available, When, & Where",
  para = `We help event venues and suppliers connect direct with buyers of over 4,000 UK annual award and conferences. Make data-driven decisions and start booking for next year.`,
  h2Text = "Custom reports and targeted leads",
  para2 = "Maximise your revenue with",
  para3 = "See the impact for yourself with a free selection of data",
} = Astro.props;
---

<SectionLayout
  variant="image"
  imageFolder="connect"
  imageName="pexels-didsss-2127522.jpg"
  className="Section01"
  heightVariant="tall"
>
  <section class="section-1">
    <h1 class="h1-wrapper masked" style="white-space: pre-line;">
      {h1Text}
    </h1>
    <p class="normal-text para-wrapper" style="white-space: pre-line;">
      {para}
    </p>

    <p class="subtitle">{subtitle}</p>

    <section class="section-2">
      <p class="para2-wrapper">
        {para2}
      </p>
      <h2 class="h2-wrapper">
        {h2Text}
      </h2>

      <p class="para3-wrapper">
        {para3}
      </p>
    </section>
  </section>
</SectionLayout>

<slot />

