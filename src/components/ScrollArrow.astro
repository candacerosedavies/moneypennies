<style is:global>
    .scroll-arrow {
        position: fixed;
        bottom: 0.5rem;
        left: 3rem;
        color: white !important;
        padding: 1rem;
        transition: all 300ms ease-in-out;
    }

    .scroll-arrow svg {
        height: clamp(5rem, 5vh, 5rem);
        width: clamp(5rem, 5vh, 5rem);
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(-25%);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: translateY(0);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }

    .scroll-arrow {
        animation: bounce 1s infinite;
    }
</style>

<i id="scroll-arrow" class="scroll-arrow">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
</i>

<script>
    (() => {
        const arrow = document.getElementById("scroll-arrow");

        //need this as was getting a typescript error
        if (!arrow) return;

        const handleArrowScroll = () => {
            const scrollPosition = window.scrollY;
            const viewportHeight = window.innerHeight;
            const threshold = viewportHeight * 0.5;

            arrow.style.display = scrollPosition > threshold ? "none" : "block";
        };

        // Initial check
        handleArrowScroll();

        // Add scroll event listener
        window.addEventListener("scroll", handleArrowScroll);
    })();
</script>
