---
// components/Hamburger.astro
---

<button class="hamburger-button" aria-label="menu">
  <span class="hamburger-line"></span>
  <span class="hamburger-line"></span>
</button>

<div class="mobile-menu">
  <a href="/contact/">start connecting</a>
</div>

<script>
  //Mobile menu toggle
  const hamburgerButton = document.querySelector(".hamburger-button");
  const mobileMenu = document.querySelector(".mobile-menu");

  hamburgerButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("active");
  });
</script>

<style>
  .hamburger-button {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .hamburger-line {
    display: block;
    height: 3px;
    width: 100%;
    background-color: white;
    transition: all 300ms;
  }

  /* This will respond to the header-scrolled class we set on the HTML element */
  :global(.header-scrolled) .hamburger-line {
    background-color: black;
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    padding: 2rem;
    flex-direction: column;
    align-items: center;
  }

  .mobile-link {
    color: white;
    font-size: 1.5rem;
    padding: 1rem;
    text-decoration: none;
  }

  /* Show on mobile */
  @media (max-width: 768px) {
    .hamburger-button {
      display: flex;
    }

    .mobile-menu.active {
      display: flex;
    }
  }
</style>
